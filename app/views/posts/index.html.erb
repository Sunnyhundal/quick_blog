<!-- app/views/posts/index.html.erb -->

<h1 class="text-4xl font-bold mb-4">Blog Posts</h1>

<% @posts.each do |post| %>
  <div class="mb-4 border p-4">
    <h2 class="text-2xl font-bold"><%= link_to post.title, post %></h2>
    <p class="text-gray-600"><%= truncate(strip_tags(post.body), length: 150) %></p>
  </div>
<% end %>

<%= link_to 'New Post', new_post_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>